<div class="py-4">
  <form class="d-flex flex-column align-items-center" action="/confirm" method="post">
    <div class="w-100 inquiry">
      <div>お名前</div>
      <input class="my-2 w-100" type="text" name="name" required>
    </div>
    <div class="w-100 inquiry">
      <div>メールアドレス</div>
      <input class="my-2 w-100" type="email" name="email" required>
    </div>
    <div class="w-100 inquiry">
      <div>件名</div>
      <input class="my-2 w-100" type="text" name="subject" required>
    </div>
    <div class="w-100 inquiry">
      <div>本文</div>
      <textarea class="my-2 w-100" rows="3" name="message" required></textarea>
    </div>
    <div class="w-100 inquiry text-center">
      <input class="btn btn-secondary my-2" type="submit" value="確認画面へ">
    </div>
  </form>
</div>