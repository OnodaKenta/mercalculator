<div class="py-4">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>項目</th>
        <th>値</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>配送方法</td>
        <td><%= @method.titlename %></td>
      </tr>
      <tr>
        <td>料金</td>
        <td>下記参照</td>
      </tr>
      <tr>
        <td>種類</td>
        <td><%= @method.type %></td>
      </tr>
      <tr>
        <td>縦</td>
        <% if @method.lside.nil? == false %>
          <td><%= @method.lside %>cm</td>
        <% else %>
          <td>-</td>
        <% end %>
      </tr>
      <tr>
        <td>横</td>
        <% if @method.sside.nil? == false %>
          <td><%= @method.sside %>cm</td>
        <% else %>
          <td>-</td>
        <% end %>
      </tr>
      <tr>
        <td>厚さ</td>
        <% if @method.thickness.nil? == false %>
          <td><%= @method.thickness %>cm</td>
        <% else %>
          <td>-</td>
        <% end %>
      </tr>
      <tr>
        <td>3辺合計</td>
        <td>下記参照</td>
      </tr>
      <tr>
        <td>重量</td>
        <td>下記参照</td>
      </tr>
      <tr>
        <td>匿名配送</td>
        <td><%= @method.anonymous %></td>
      </tr>
      <tr>
        <td>追跡</td>
        <td><%= @method.tracking %></td>
      </tr>
      <tr>
        <td>補償</td>
        <td><%= @method.compensation %></td>
      </tr>
    </tbody>
  </table>
</div>