<div class="py-4">
  <p class="br">お名前: <%= h(@name) %></p>
  <p class="br">メール: <%= h(@email) %></p>
  <p class="br">件名: <%= h(@subject) %></p>
  <p class="br">本文:<br><%= h(@message) %></p>
  <div class="text-center">
    <form action="/send" method="post">
      <%= csrf_tag %>
      <input type="hidden" value="<%= @name %>" name="name">
      <input type="hidden" value="<%= @email %>" name="email">
      <input type="hidden" value="<%= @subject %>" name="subject">
      <input type="hidden" value="<%= @message %>" name="message">
      <input class="btn btn-secondary px-5 my-2" type="submit" value="送信">
    </form>
  <div>
</div>